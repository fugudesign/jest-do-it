{
  "name": "jest-do-it",
  "private": true,
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "./packages/core",
      "./packages/react"
    ]
  },
  "scripts": {
    "build:core": "yarn workspace @jest-do-it/core build",
    "build:react": "yarn workspace @jest-do-it/react build",
    "build": "yarn build:core && yarn build:react",
    "test:core": "yarn workspace @jest-do-it/core test",
    "test:react": "yarn workspace @jest-do-it/react test",
    "test": "yarn test:core && yarn test:react"
  }
}
